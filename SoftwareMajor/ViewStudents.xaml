<Window x:Class="ViewStudents"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SoftwareMajor"
        mc:Ignorable="d"
        Title="ViewStudents" Height="551" Width="668" Loaded="Window_Loaded">
    <Grid>
        <ListView x:Name="listView" HorizontalAlignment="Left" Height="453" Margin="26,48,0,0" VerticalAlignment="Top" Width="612">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Firstname"  DisplayMemberBinding="{Binding Firstname}" Width="200"/>
                    <GridViewColumn Header="Surname" DisplayMemberBinding="{Binding Surname}" Width="200"/>
                    <GridViewColumn Header="DOB"  DisplayMemberBinding="{Binding DOB}" Width="200"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="button" Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="540,10,0,0"/>

    </Grid>
</Window>
